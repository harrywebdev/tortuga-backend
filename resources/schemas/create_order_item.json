{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://localhost/create_order_item.json#",
  "title": "Create an Order Item validation",
  "type": "object",
  "required": [
    "type",
    "attributes"
  ],
  "additionalProperties": false,
  "properties": {
    "type": {
      "const": "order-items"
    },
    "attributes": {
      "type": "object",
      "required": [
        "product_variation_id",
        "quantity"
      ],
      "additionalProperties": true,
      "properties": {
        "product_variation_id": {
          "type": "number"
        },
        "quantity": {
          "type": "number"
        }
      }
    }
  }
}