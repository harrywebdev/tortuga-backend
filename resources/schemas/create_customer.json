{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://localhost/create_customer.json#",
  "title": "Create a Customer validation",
  "type": "object",
  "required": [
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "data": {
      "type": "object",
      "required": [
        "type",
        "attributes"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "customers"
        },
        "attributes": {
          "type": "object",
          "required": [
            "reg_type",
            "code"
          ],
          "additionalProperties": true,
          "properties": {
            "reg_type": {
              "type": "string",
              "anyOf": [
                {
                  "const": "mobile"
                },
                {
                  "const": "facebook"
                }
              ]
            },
            "code": {
              "type": "string",
              "maxLength": 512
            },
            "name": {
              "type": [
                "string",
                "null"
              ],
              "maxLength": 191
            }
          }
        }
      }
    }
  }
}