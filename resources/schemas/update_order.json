{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://localhost/update_order.json#",
  "title": "Update an Order validation",
  "type": "object",
  "required": [
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "data": {
      "type": "object",
      "required": [
        "type",
        "attributes",
        "id"
      ],
      "additionalProperties": true,
      "properties": {
        "type": {
          "const": "orders"
        },
        "attributes": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "status": {
              "enum": [
                "received",
                "processing",
                "rejected",
                "cancelled",
                "made",
                "completed"
              ]
            },
            "order_time": {
              "type": "string",
              "format": "date-time"
            },
            "rejected_reason": {
              "enum": [
                "no_time",
                "missing_product",
                "on_request",
                "no_reason",
                "is_invalid",
                null
              ]
            },
            "cancelled_reason": {
              "enum": [
                "no_show",
                "new_order",
                "on_request",
                "no_reason",
                null
              ]
            }
          }
        },
        "id": {
          "type": "string"
        }
      }
    }
  }
}