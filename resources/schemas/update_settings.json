{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://localhost/update_settings.json#",
  "title": "Update Settings validation",
  "type": "object",
  "required": [
    "data"
  ],
  "additionalProperties": false,
  "properties": {
    "data": {
      "type": "object",
      "required": [
        "type",
        "attributes",
        "id"
      ],
      "additionalProperties": true,
      "properties": {
        "type": {
          "const": "settings"
        },
        "attributes": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "is_open_for_booking": {
              "type": "boolean"
            }
          }
        },
        "id": {
          "type": "string"
        }
      }
    }
  }
}